{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="w-full my-8 flex items-center justify-center">
      <div class="w-[25%] max-md:w-[90%]">
        <h3 class="text-center font-bold text-xl my-5">
          Connectez vous a votre compte
        </h3>
        {% if error %}
            <div class="p-3 bg-red-300">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form method="post" class="w-full flex flex-col items-center justify-center gap-8">
          <input
            type="email"
            value="{{ last_username }}"
            name="_username"
            autocomplete="email" 
            required autofocus
            placeholder="Votre email"
            class="w-full outline-none p-3 border rounded-md"
          />
          <input
            type="password"
            name="_password"
            autocomplete="current-password" required
            placeholder="Votre mot de passe"
            class="w-full outline-none p-3 border rounded-md"
          />
          <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
          <button type="submit" class="bg-black text-white p-3">
            Se Connecter
          </button>
        </form>
        <div class="flex items-center justify-between my-5">
          <a href="/password-forgot.html">Mot de passe Oublie ?</a>
          <a href="{{ path('app_register') }}">Creer un nouveau compte</a>
        </div>
      </div>
    </div>

    <form method="post">

        {# {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        > #}

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        {# <button class="btn btn-lg btn-primary" type="submit">
            Sign in
